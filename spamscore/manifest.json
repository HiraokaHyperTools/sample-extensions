{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "spam@sample.extensions.thunderbird.net"
    }
  },
  "name": "Spam Score",
  "description": "Adds a spam score column to the thread pane",
  "version": "7",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "experiment_apis": {
    "spamScore": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "spamScore"
          ]
        ],
        "script": "implementation.js"
      }
    }
  }
}
